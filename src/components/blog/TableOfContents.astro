---
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;

// Filter to only h2 and h3
const tocHeadings = headings.filter(h => h.depth >= 2 && h.depth <= 3);
---

{tocHeadings.length > 0 && (
  <nav class="card p-5 sticky top-24">
    <h4 class="text-sm font-semibold text-[--color-text-primary] mb-4 uppercase tracking-wider">
      Table of Contents
    </h4>
    <ul class="space-y-2">
      {tocHeadings.map((heading) => (
        <li class={heading.depth === 3 ? 'ml-4' : ''}>
          <a
            href={`#${heading.slug}`}
            class="text-sm text-[--color-text-secondary] hover:text-[--color-accent] transition-colors block py-1"
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
