---
interface Props {
  category: 'reviews' | 'news' | 'guides' | 'community';
  size?: 'sm' | 'md';
}

const { category, size = 'sm' } = Astro.props;

const categoryConfig = {
  reviews: { label: 'Reviews', color: 'bg-amber-500/20 text-amber-400 border-amber-500/30' },
  news: { label: 'News', color: 'bg-blue-500/20 text-blue-400 border-blue-500/30' },
  guides: { label: 'Guides', color: 'bg-emerald-500/20 text-emerald-400 border-emerald-500/30' },
  community: { label: 'Community', color: 'bg-purple-500/20 text-purple-400 border-purple-500/30' },
};

const config = categoryConfig[category];
const sizeClasses = size === 'sm' ? 'px-2 py-0.5 text-xs' : 'px-3 py-1 text-sm';
---

<span class={`inline-flex items-center rounded-full border font-medium ${config.color} ${sizeClasses}`}>
  {config.label}
</span>
