---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Blog', href: '/blog' },
  { name: 'Compare', href: '/protocols' },
  {
    name: 'MeshCore',
    href: '/meshcore/getting-started',
    dropdown: [
      { name: 'Getting Started', href: '/meshcore/getting-started' },
      { name: 'MeshCore Map', href: '/meshcore/map' },
      { name: 'Coverage Map', href: '/coverage' },
      { name: 'Network Analyzer', href: '/meshcore/analyzer' },
      { name: 'Devices & Equipment', href: '/meshcore/devices' },
      { name: 'Setup Guide', href: '/meshcore/setup' },
      { name: 'Antenna FAQ', href: '/meshcore/antennas' },
      { name: 'Enclosures', href: '/meshcore/enclosures' },
      { name: 'Wiki', href: '/meshcore/wiki' },
    ]
  },
  {
    name: 'Meshtastic',
    href: '/meshtastic/getting-started',
    dropdown: [
      { name: 'Getting Started', href: '/meshtastic/getting-started' },
      { name: 'Mesh Map', href: '/meshtastic/map' },
      { name: 'Devices & Equipment', href: '/meshtastic/devices' },
      { name: 'Setup Guide', href: '/meshtastic/setup' },
      { name: 'Antenna FAQ', href: '/meshtastic/antennas' },
      { name: 'Enclosures', href: '/meshtastic/enclosures' },
      { name: 'Docs', href: '/meshtastic/wiki' },
    ]
  },
  { name: 'Tools', href: '/tools' },
  { name: 'Community', href: '/community' },
  { name: 'Resources', href: '/resources' },
  { name: 'Partner', href: '/partner' },
  { name: 'Not Local?', href: '/not-local' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[--color-bg-primary]/90 backdrop-blur-md border-b border-[--color-border]">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2.5 group flex-shrink-0 mr-8">
        <svg class="h-8 w-8 text-[--color-accent]" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
          <!-- Hexagon mesh pattern -->
          <path d="M16 2L28 9V23L16 30L4 23V9L16 2Z" stroke="currentColor" stroke-width="2" fill="none"/>
          <path d="M16 2V30M4 9L28 23M28 9L4 23" stroke="currentColor" stroke-width="1.5" opacity="0.6"/>
          <circle cx="16" cy="2" r="2" fill="currentColor"/>
          <circle cx="28" cy="9" r="2" fill="currentColor"/>
          <circle cx="28" cy="23" r="2" fill="currentColor"/>
          <circle cx="16" cy="30" r="2" fill="currentColor"/>
          <circle cx="4" cy="23" r="2" fill="currentColor"/>
          <circle cx="4" cy="9" r="2" fill="currentColor"/>
          <circle cx="16" cy="16" r="2.5" fill="currentColor"/>
        </svg>
        <span class="text-xl font-bold whitespace-nowrap"><span class="text-[--color-text-primary]">NoDak</span> <span class="gradient-text">Mesh</span></span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-0.5 flex-1" aria-label="Main navigation">
        {navItems.map((item) => (
          <div class="relative group">
            <a
              href={item.href}
              class={`px-4 py-2 rounded-lg text-sm font-medium transition-all flex items-center gap-1 whitespace-nowrap
                ${currentPath === item.href || currentPath.startsWith(item.href + '/')
                  ? 'text-[--color-accent] bg-[--color-accent]/10'
                  : 'text-[--color-text-secondary] hover:text-[--color-text-primary] hover:bg-[--color-bg-tertiary]'
                }`}
            >
              {item.name}
              {item.dropdown && (
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>
            {item.dropdown && (
              <div class="absolute top-full left-0 mt-1 w-48 py-2 bg-[#111111] border border-[--color-border] rounded-lg shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200" style="backdrop-filter: blur(10px);">
                {item.dropdown.map((subItem) => (
                  <a
                    href={subItem.href}
                    class={`block px-4 py-2 text-sm transition-colors
                      ${currentPath === subItem.href
                        ? 'text-[--color-accent] bg-[--color-accent]/10'
                        : 'text-[--color-text-secondary] hover:text-[--color-text-primary] hover:bg-[--color-bg-tertiary]'
                      }`}
                  >
                    {subItem.name}
                  </a>
                ))}
              </div>
            )}
          </div>
        ))}
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden ml-auto p-2 rounded-lg text-[--color-text-secondary] hover:text-[--color-text-primary] hover:bg-[--color-bg-tertiary]"
        aria-label="Open navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <nav id="mobile-menu" class="hidden md:hidden pb-4" aria-label="Mobile navigation">
      {navItems.map((item) => (
        <div>
          <a
            href={item.href}
            class={`block px-4 py-2 rounded-lg text-sm font-medium transition-all
              ${currentPath === item.href || currentPath.startsWith(item.href + '/')
                ? 'text-[--color-accent] bg-[--color-accent]/10'
                : 'text-[--color-text-secondary] hover:text-[--color-text-primary] hover:bg-[--color-bg-tertiary]'
              }`}
          >
            {item.name}
          </a>
          {item.dropdown && (
            <div class="pl-4">
              {item.dropdown.map((subItem) => (
                <a
                  href={subItem.href}
                  class={`block px-4 py-2 text-sm transition-colors
                    ${currentPath === subItem.href
                      ? 'text-[--color-accent]'
                      : 'text-[--color-text-muted] hover:text-[--color-text-secondary]'
                    }`}
                >
                  {subItem.name}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
    </nav>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    const isHidden = mobileMenu?.classList.toggle('hidden');
    mobileMenuBtn?.setAttribute('aria-expanded', isHidden ? 'false' : 'true');
    mobileMenuBtn?.setAttribute('aria-label', isHidden ? 'Open navigation menu' : 'Close navigation menu');
  });
</script>
