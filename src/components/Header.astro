---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'MeshCore vs Meshtastic', href: '/protocols' },
  {
    name: 'MeshCore',
    href: '/meshcore/getting-started',
    dropdown: [
      { name: 'Getting Started', href: '/meshcore/getting-started' },
      { name: 'MeshCore Map', href: '/meshcore/map' },
      { name: 'Network Analyzer', href: '/meshcore/analyzer' },
      { name: 'Devices', href: '/meshcore/devices' },
    ]
  },
  {
    name: 'Meshtastic',
    href: '/meshtastic/getting-started',
    dropdown: [
      { name: 'Getting Started', href: '/meshtastic/getting-started' },
      { name: 'Mesh Map', href: '/meshtastic/map' },
      { name: 'Devices', href: '/meshtastic/devices' },
    ]
  },
  { name: 'Community', href: '/community' },
  { name: 'Resources', href: '/resources' },
  { name: 'Partner', href: '/partner' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[--color-bg-primary]/90 backdrop-blur-md border-b border-[--color-border]">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <span class="text-xl font-bold text-[--color-text-primary]">NoDak Mesh</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navItems.map((item) => (
          <div class="relative group">
            <a
              href={item.href}
              class={`px-4 py-2 rounded-lg text-sm font-medium transition-all flex items-center gap-1
                ${currentPath === item.href || currentPath.startsWith(item.href + '/')
                  ? 'text-[--color-accent] bg-[--color-accent]/10'
                  : 'text-[--color-text-secondary] hover:text-[--color-text-primary] hover:bg-[--color-bg-tertiary]'
                }`}
            >
              {item.name}
              {item.dropdown && (
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>
            {item.dropdown && (
              <div class="absolute top-full left-0 mt-1 w-48 py-2 bg-[#111111] border border-[--color-border] rounded-lg shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200" style="backdrop-filter: blur(10px);">
                {item.dropdown.map((subItem) => (
                  <a
                    href={subItem.href}
                    class={`block px-4 py-2 text-sm transition-colors
                      ${currentPath === subItem.href
                        ? 'text-[--color-accent] bg-[--color-accent]/10'
                        : 'text-[--color-text-secondary] hover:text-[--color-text-primary] hover:bg-[--color-bg-tertiary]'
                      }`}
                  >
                    {subItem.name}
                  </a>
                ))}
              </div>
            )}
          </div>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg text-[--color-text-secondary] hover:text-[--color-text-primary] hover:bg-[--color-bg-tertiary]">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      {navItems.map((item) => (
        <div>
          <a
            href={item.href}
            class={`block px-4 py-2 rounded-lg text-sm font-medium transition-all
              ${currentPath === item.href || currentPath.startsWith(item.href + '/')
                ? 'text-[--color-accent] bg-[--color-accent]/10'
                : 'text-[--color-text-secondary] hover:text-[--color-text-primary] hover:bg-[--color-bg-tertiary]'
              }`}
          >
            {item.name}
          </a>
          {item.dropdown && (
            <div class="pl-4">
              {item.dropdown.map((subItem) => (
                <a
                  href={subItem.href}
                  class={`block px-4 py-2 text-sm transition-colors
                    ${currentPath === subItem.href
                      ? 'text-[--color-accent]'
                      : 'text-[--color-text-muted] hover:text-[--color-text-secondary]'
                    }`}
                >
                  {subItem.name}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
    </div>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
