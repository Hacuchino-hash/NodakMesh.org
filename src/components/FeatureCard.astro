---
interface Props {
  title: string;
  description: string;
  icon: string;
  href?: string;
}

const { title, description, icon, href } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<Tag href={href} class="card card-shine p-6 block group">
  <div class="w-12 h-12 rounded-lg bg-[--color-accent]/10 flex items-center justify-center mb-4 group-hover:bg-[--color-accent]/20 transition-colors icon-glow">
    <Fragment set:html={icon} />
  </div>
  <h3 class="text-lg font-semibold text-[--color-text-primary] mb-2 group-hover:text-[--color-accent] transition-colors">
    {title}
  </h3>
  <p class="text-[--color-text-secondary] text-sm">
    {description}
  </p>
  {href && (
    <div class="mt-4 flex items-center gap-2 text-[--color-accent] text-sm font-medium">
      Learn more
      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  )}
</Tag>
