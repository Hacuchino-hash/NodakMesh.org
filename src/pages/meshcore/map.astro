---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="MeshCore Map - NodakMesh">
  <Header slot="header" />

  <div class="pt-24 pb-16">
    <!-- Hero -->
    <section class="py-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div>
            <a href="/meshcore" class="inline-flex items-center gap-2 text-[--color-accent] hover:underline mb-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back to MeshCore
            </a>
            <h1 class="text-3xl sm:text-4xl font-bold text-[--color-text-primary]">
              <span class="gradient-text">MeshCore</span> Map
            </h1>
            <p class="text-[--color-text-secondary] mt-2">
              Live view of MeshCore nodes worldwide. Filter by Clients, Repeaters, Room Servers, and Sensors.
            </p>
          </div>
          <div class="flex gap-2">
            <a
              href="https://map.meshcore.dev"
              target="_blank"
              rel="noopener noreferrer"
              class="btn-secondary inline-flex items-center gap-2 text-sm"
            >
              Open Full Map
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="py-4">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="card overflow-hidden">
          <!-- Map Container -->
          <div class="relative bg-[--color-bg-tertiary]" style="height: 70vh; min-height: 500px;">
            <iframe
              src="https://map.meshcore.dev"
              class="w-full h-full border-0"
              loading="lazy"
              title="MeshCore Node Map"
              allow="geolocation"
            ></iframe>

            <!-- Loading Overlay -->
            <div id="map-loading" class="absolute inset-0 bg-[--color-bg-tertiary] flex items-center justify-center">
              <div class="text-center">
                <svg class="w-12 h-12 text-[--color-accent] animate-spin mx-auto mb-4" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <p class="text-[--color-text-secondary]">Loading MeshCore map...</p>
              </div>
            </div>
          </div>

          <!-- Map Info Bar -->
          <div class="p-4 bg-[--color-bg-secondary] border-t border-[--color-border]">
            <div class="flex flex-wrap items-center justify-between gap-4">
              <div class="flex items-center gap-6 text-sm">
                <div class="flex items-center gap-2">
                  <span class="w-3 h-3 rounded-full bg-[--color-accent]"></span>
                  <span class="text-[--color-text-secondary]">Clients</span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="w-3 h-3 rounded-full bg-[--color-success]"></span>
                  <span class="text-[--color-text-secondary]">Repeaters</span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="w-3 h-3 rounded-full bg-[--color-secondary]"></span>
                  <span class="text-[--color-text-secondary]">Room Servers</span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="w-3 h-3 rounded-full bg-[--color-warning]"></span>
                  <span class="text-[--color-text-secondary]">Sensors</span>
                </div>
              </div>
              <p class="text-xs text-[--color-text-muted]">
                Map data provided by <a href="https://map.meshcore.dev" target="_blank" class="text-[--color-accent] hover:underline">map.meshcore.dev</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Info Section -->
    <section class="py-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-6">
          <div class="card p-6">
            <h3 class="text-lg font-semibold text-[--color-text-primary] mb-3">Using the Map</h3>
            <ul class="space-y-2 text-[--color-text-secondary] text-sm">
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-[--color-accent] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                <span>Use mouse wheel or +/- buttons to zoom</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-[--color-accent] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122" />
                </svg>
                <span>Click and drag to pan around the map</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-[--color-accent] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                </svg>
                <span>Use filters to show specific node types</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-[--color-accent] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Click on nodes to see details</span>
              </li>
            </ul>
          </div>
          <div class="card p-6">
            <h3 class="text-lg font-semibold text-[--color-text-primary] mb-3">Add Your Node</h3>
            <p class="text-[--color-text-secondary] text-sm mb-4">
              Want your node to appear on the map? Make sure your MeshCore device is configured to report
              its position. Nodes with GPS or a fixed location will automatically appear on the map.
            </p>
            <a href="/meshcore/getting-started" class="text-[--color-accent] hover:underline text-sm inline-flex items-center gap-1">
              Learn how to set up your node
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>

  <Footer slot="footer" />
</Layout>

<script>
  // Hide loading overlay once iframe loads
  const iframe = document.querySelector('iframe');
  const loading = document.getElementById('map-loading');

  iframe?.addEventListener('load', () => {
    loading?.classList.add('hidden');
  });

  // Fallback: hide after 5 seconds regardless
  setTimeout(() => {
    loading?.classList.add('hidden');
  }, 5000);
</script>
