<script>
  // Load marked.js from CDN
  const markedScript = document.createElement('script');
  markedScript.src = 'https://cdn.jsdelivr.net/npm/marked/marked.min.js';
  document.head.appendChild(markedScript);

  const DOCS_BASE = 'https://raw.githubusercontent.com/meshtastic/meshtastic/master/docs';
  const MESHTASTIC_DOCS_URL = 'https://meshtastic.org/docs';
  let currentPage = 'hardware/antennas/index';

  const loadingEl = document.getElementById('antenna-loading');
  const errorEl = document.getElementById('antenna-error');
  const contentEl = document.getElementById('antenna-content');
  const loadTimeEl = document.getElementById('load-time');
  const loadTimeValueEl = document.getElementById('load-time-value');
  const retryBtn = document.getElementById('retry-btn');
  const viewOriginalEl = document.getElementById('view-original');
  const originalLinkEl = document.getElementById('original-link');
  const errorOriginalLinkEl = document.getElementById('error-original-link');

  function getOriginalUrl(slug: string): string {
    const path = slug.replace('/index', '').replace(/^hardware\//, 'hardware/');
    return `${MESHTASTIC_DOCS_URL}/${path}/`;
  }

  function showLoading() {
    loadingEl?.classList.remove('hidden');
    errorEl?.classList.add('hidden');
    contentEl?.classList.add('hidden');
    loadTimeEl?.classList.add('hidden');
    viewOriginalEl?.classList.add('hidden');
  }

  function showError() {
    loadingEl?.classList.add('hidden');
    errorEl?.classList.remove('hidden');
    contentEl?.classList.add('hidden');
    loadTimeEl?.classList.add('hidden');
    viewOriginalEl?.classList.add('hidden');

    if (errorOriginalLinkEl) {
      errorOriginalLinkEl.setAttribute('href', getOriginalUrl(currentPage));
    }
  }

  function showContent(html: string, loadTime: number) {
    loadingEl?.classList.add('hidden');
    errorEl?.classList.add('hidden');
    contentEl?.classList.remove('hidden');
    loadTimeEl?.classList.remove('hidden');
    viewOriginalEl?.classList.remove('hidden');

    if (contentEl) contentEl.innerHTML = html;
    if (loadTimeValueEl) loadTimeValueEl.textContent = loadTime.toString();
    if (originalLinkEl) {
      originalLinkEl.setAttribute('href', getOriginalUrl(currentPage));
    }

    setupInternalLinks();
  }

  function cleanMdx(mdx: string): string {
    // Remove frontmatter
    mdx = mdx.replace(/^---[\s\S]*?---\n*/m, '');

    // Remove import statements
    mdx = mdx.replace(/^import\s+.*$/gm, '');

    // Remove export statements
    mdx = mdx.replace(/^export\s+.*$/gm, '');

    // Convert :::admonition blocks to styled divs
    const admonitionTypes = ['note', 'info', 'warning', 'tip', 'caution', 'danger'];
    admonitionTypes.forEach(type => {
      const regex = new RegExp(`:::${type}\\[?([^\\]]*)?\\]?\\s*([\\s\\S]*?):::`, 'g');
      mdx = mdx.replace(regex, (_match, title, content) => {
        const displayTitle = title || type.charAt(0).toUpperCase() + type.slice(1);
        return `<div class="admonition admonition-${type}"><strong>${displayTitle}</strong>${content.trim()}</div>`;
      });
    });

    // Remove any remaining JSX components
    mdx = mdx.replace(/<[A-Z][a-zA-Z]*[^>]*\/>/g, '');
    mdx = mdx.replace(/<[A-Z][a-zA-Z]*[^>]*>[\s\S]*?<\/[A-Z][a-zA-Z]*>/g, '');

    // Fix image paths
    mdx = mdx.replace(/!\[([^\]]*)\]\(\/img\/([^)]+)\)/g,
      '![$1](https://meshtastic.org/img/$2)');

    // Fix relative links to docs
    mdx = mdx.replace(/\[([^\]]+)\]\(\/docs\/([^)]+)\)/g, (_match, text, path) => {
      return `<a href="https://meshtastic.org/docs/${path}" target="_blank">${text}</a>`;
    });

    // Fix same-directory relative links
    mdx = mdx.replace(/\[([^\]]+)\]\(\.\/([^)]+)\)/g, (_match, text, path) => {
      const cleanPath = path.replace(/\.mdx?$/, '').replace(/\/$/, '');
      const slug = `hardware/antennas/${cleanPath}`;
      return `<a href="#" class="internal-doc-link" data-slug="${slug}">${text}</a>`;
    });

    return mdx;
  }

  function setupInternalLinks() {
    document.querySelectorAll('.internal-doc-link').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const slug = (link as HTMLElement).getAttribute('data-slug');
        if (slug) {
          loadAntennaPage(slug);
          window.history.pushState({ slug }, '', `#${slug}`);
        }
      });
    });
  }

  async function loadAntennaPage(slug: string) {
    showLoading();
    currentPage = slug;

    // Update active nav button
    document.querySelectorAll('.antenna-nav-btn').forEach(btn => {
      btn.classList.toggle('active', btn.getAttribute('data-page') === slug);
    });

    const startTime = performance.now();

    // Try multiple file extensions
    const extensions = ['.mdx', '.md'];
    let response: Response | null = null;

    for (const ext of extensions) {
      const url = `${DOCS_BASE}/${slug}${ext}`;
      try {
        response = await fetch(url);
        if (response.ok) break;
      } catch (e) {
        // Continue to next extension
      }
    }

    // If not found and doesn't end with index, try with /index
    if (!response?.ok && !slug.endsWith('index')) {
      for (const ext of extensions) {
        const url = `${DOCS_BASE}/${slug}/index${ext}`;
        try {
          response = await fetch(url);
          if (response.ok) {
            currentPage = `${slug}/index`;
            break;
          }
        } catch (e) {
          // Continue
        }
      }
    }

    if (!response?.ok) {
      showError();
      return;
    }

    try {
      let markdown = await response.text();
      markdown = cleanMdx(markdown);

      const loadTime = Math.round(performance.now() - startTime);

      // Wait for marked to load
      const waitForMarked = () => {
        return new Promise<void>((resolve) => {
          const check = () => {
            if ((window as any).marked) {
              resolve();
            } else {
              setTimeout(check, 50);
            }
          };
          check();
        });
      };

      await waitForMarked();
      const html = (window as any).marked.parse(markdown);
      showContent(html, loadTime);

      contentEl?.scrollIntoView({ behavior: 'smooth', block: 'start' });

    } catch (error) {
      console.error('Failed to parse antenna docs:', error);
      showError();
    }
  }

  // Handle back/forward navigation
  window.addEventListener('popstate', (e) => {
    if (e.state?.slug) {
      loadAntennaPage(e.state.slug);
    }
  });

  // Initialize when marked is loaded
  markedScript.onload = () => {
    const hash = window.location.hash.slice(1);
    if (hash) {
      loadAntennaPage(hash);
    } else {
      loadAntennaPage('hardware/antennas/index');
    }
  };

  // Nav button clicks
  document.querySelectorAll('.antenna-nav-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const page = btn.getAttribute('data-page');
      if (page) {
        loadAntennaPage(page);
        window.history.pushState({ slug: page }, '', `#${page}`);
      }
    });
  });

  // Retry button
  retryBtn?.addEventListener('click', () => loadAntennaPage(currentPage));
</script>
