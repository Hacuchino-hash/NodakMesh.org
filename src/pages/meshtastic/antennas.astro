---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Antenna documentation pages
const antennaPages = [
  { name: 'Overview', slug: 'hardware/antennas/index' },
  { name: 'LoRa Antennas', slug: 'hardware/antennas/lora-antennas' },
  { name: 'Testing', slug: 'hardware/antennas/testing' },
  { name: 'Antenna Report', slug: 'hardware/antennas/antenna-report' },
  { name: 'Resources', slug: 'hardware/antennas/resources' },
];
---

<Layout
  title="Meshtastic Antennas - NodakMesh"
  description="LoRa antenna guide for Meshtastic. Learn about antenna selection, testing, SWR measurements, and recommendations for 915MHz mesh networking."
  keywords="Meshtastic antenna, LoRa antenna, 915MHz antenna, mesh network antenna, SWR testing, antenna selection, Meshtastic range"
>
  <Header slot="header" />

  <div class="pt-24 pb-16 docs-bg">

    <section class="py-8 relative z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
          <div class="flex items-center gap-2 text-[--color-text-muted] text-sm mb-4">
            <a href="/meshtastic" class="hover:text-[--color-accent]">Meshtastic</a>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <span>Antennas</span>
          </div>
          <h1 class="text-3xl sm:text-4xl font-bold text-[--color-text-primary] mb-2">
            LoRa <span class="gradient-text">Antennas</span>
          </h1>
          <p class="text-[--color-text-secondary]">
            Official antenna documentation from Meshtastic, updated automatically.
          </p>
        </div>

        <!-- Main Content -->
        <div class="flex flex-col lg:flex-row gap-8">
          <!-- Sidebar -->
          <aside class="lg:w-64 flex-shrink-0">
            <div class="card p-4 sticky top-24 max-h-[calc(100vh-8rem)] overflow-y-auto">
              <h3 class="text-xs font-semibold text-[--color-text-muted] mb-3 uppercase tracking-wider">Antenna Docs</h3>
              <nav class="space-y-1">
                {antennaPages.map((page) => (
                  <button
                    data-page={page.slug}
                    class="antenna-nav-btn w-full text-left px-3 py-1.5 rounded-lg text-sm transition-colors text-[--color-text-secondary] hover:text-[--color-text-primary] hover:bg-[--color-bg-tertiary]"
                  >
                    {page.name}
                  </button>
                ))}
              </nav>

              <div class="mt-6 pt-4 border-t border-[--color-border]">
                <h3 class="text-xs font-semibold text-[--color-text-muted] mb-3 uppercase tracking-wider">More Hardware</h3>
                <nav class="space-y-1">
                  <a href="/meshtastic/devices" class="block px-3 py-1.5 rounded-lg text-sm text-[--color-text-secondary] hover:text-[--color-text-primary] hover:bg-[--color-bg-tertiary]">
                    Devices
                  </a>
                  <a href="/meshtastic/enclosures" class="block px-3 py-1.5 rounded-lg text-sm text-[--color-text-secondary] hover:text-[--color-text-primary] hover:bg-[--color-bg-tertiary]">
                    Enclosures
                  </a>
                </nav>
              </div>

              <div class="mt-4 pt-4 border-t border-[--color-border]">
                <a
                  href="https://meshtastic.org/docs/hardware/antennas/"
                  target="_blank"
                  class="text-xs text-[--color-text-muted] hover:text-[--color-accent] flex items-center gap-1 mb-2"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                  Full docs at meshtastic.org
                </a>
                <a
                  href="https://github.com/meshtastic/meshtastic"
                  target="_blank"
                  class="text-xs text-[--color-text-muted] hover:text-[--color-accent] flex items-center gap-1"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  View on GitHub
                </a>
              </div>
            </div>
          </aside>

          <!-- Content -->
          <main class="flex-1 min-w-0">
            <div class="card p-6 lg:p-8">
              <!-- View Original Button -->
              <div id="view-original" class="hidden mb-4 pb-4 border-b border-[--color-border]">
                <a
                  id="original-link"
                  href="#"
                  target="_blank"
                  class="inline-flex items-center gap-2 text-sm text-[--color-text-muted] hover:text-[--color-accent] transition-colors"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                  View original at meshtastic.org
                </a>
              </div>

              <!-- Loading State -->
              <div id="antenna-loading" class="flex items-center justify-center py-12">
                <div class="flex items-center gap-3 text-[--color-text-muted]">
                  <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  <span>Loading antenna documentation...</span>
                </div>
              </div>

              <!-- Error State -->
              <div id="antenna-error" class="hidden py-12 text-center">
                <svg class="w-12 h-12 text-[--color-error] mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <p class="text-[--color-text-secondary] mb-2">Failed to load antenna documentation</p>
                <p class="text-[--color-text-muted] text-sm mb-4">This page may not be available or the path may have changed.</p>
                <div class="flex gap-3 justify-center">
                  <button id="retry-btn" class="btn-secondary">Try Again</button>
                  <a id="error-original-link" href="#" target="_blank" class="btn-primary">View on meshtastic.org</a>
                </div>
              </div>

              <!-- Antenna Content -->
              <div id="antenna-content" class="wiki-content hidden"></div>

              <!-- Load Time -->
              <div id="load-time" class="hidden mt-6 pt-4 border-t border-[--color-border] text-xs text-[--color-text-muted]">
                Loaded in <span id="load-time-value">0</span>ms
              </div>
            </div>
          </main>
        </div>
      </div>
    </section>
  </div>

  <Footer slot="footer" />
</Layout>

<style is:global>
