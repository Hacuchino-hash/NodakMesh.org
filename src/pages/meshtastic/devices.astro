<script>
  // Load marked.js from CDN
  const markedScript = document.createElement('script');
  markedScript.src = 'https://cdn.jsdelivr.net/npm/marked/marked.min.js';
  document.head.appendChild(markedScript);

  const DOCS_BASE = 'https://raw.githubusercontent.com/meshtastic/meshtastic/master/docs';
  const MESHTASTIC_DOCS_URL = 'https://meshtastic.org/docs';
  let currentPage = 'hardware/devices/index';

  const loadingEl = document.getElementById('device-loading');
  const errorEl = document.getElementById('device-error');
  const contentEl = document.getElementById('device-content');
  const loadTimeEl = document.getElementById('load-time');
  const loadTimeValueEl = document.getElementById('load-time-value');
  const retryBtn = document.getElementById('retry-btn');
  const viewOriginalEl = document.getElementById('view-original');
  const originalLinkEl = document.getElementById('original-link');
  const errorOriginalLinkEl = document.getElementById('error-original-link');

  // Map slug to meshtastic.org URL path
  function getOriginalUrl(slug: string): string {
    // Remove /index from the end and convert to URL
    const path = slug.replace('/index', '').replace(/^hardware\//, 'hardware/');
    return `${MESHTASTIC_DOCS_URL}/${path}/`;
  }

  function showLoading() {
    loadingEl?.classList.remove('hidden');
    errorEl?.classList.add('hidden');
    contentEl?.classList.add('hidden');
    loadTimeEl?.classList.add('hidden');
    viewOriginalEl?.classList.add('hidden');
  }

  function showError() {
    loadingEl?.classList.add('hidden');
    errorEl?.classList.remove('hidden');
    contentEl?.classList.add('hidden');
    loadTimeEl?.classList.add('hidden');
    viewOriginalEl?.classList.add('hidden');

    if (errorOriginalLinkEl) {
      errorOriginalLinkEl.setAttribute('href', getOriginalUrl(currentPage));
    }
  }

  function showContent(html: string, loadTime: number) {
    loadingEl?.classList.add('hidden');
    errorEl?.classList.add('hidden');
    contentEl?.classList.remove('hidden');
    loadTimeEl?.classList.remove('hidden');
    viewOriginalEl?.classList.remove('hidden');

    if (contentEl) contentEl.innerHTML = html;
    if (loadTimeValueEl) loadTimeValueEl.textContent = loadTime.toString();
    if (originalLinkEl) {
      originalLinkEl.setAttribute('href', getOriginalUrl(currentPage));
    }

    // Add click handlers to internal doc links
    setupInternalLinks();
  }

  function cleanMdx(mdx: string, filterValue: string = ''): string {
    // Remove frontmatter
    mdx = mdx.replace(/^---[\s\S]*?---\n*/m, '');

    // Remove import statements
    mdx = mdx.replace(/^import\s+.*$/gm, '');

    // Remove export statements
    mdx = mdx.replace(/^export\s+.*$/gm, '');

    // Convert :::admonition blocks to styled divs
    const admonitionTypes = ['note', 'info', 'warning', 'tip', 'caution', 'danger'];
    admonitionTypes.forEach(type => {
      const regex = new RegExp(`:::${type}\\[?([^\\]]*)?\\]?\\s*([\\s\\S]*?):::`, 'g');
      mdx = mdx.replace(regex, (_match, title, content) => {
        const displayTitle = title || type.charAt(0).toUpperCase() + type.slice(1);
        return `<div class="admonition admonition-${type}"><strong>${displayTitle}</strong>${content.trim()}</div>`;
      });
    });

    // Handle Tabs/TabItem - extract content from each tab and display as sections
    // First, extract TabItem contents with their labels
    mdx = mdx.replace(/<Tabs[\s\S]*?values=\{\[([\s\S]*?)\]\}[\s\S]*?>([\s\S]*?)<\/Tabs>/g, (_match, valuesStr, tabsContent) => {
      // Parse tab value->label mappings from the values array
      // Match patterns like: {label: 'LoRa32 V4', value:'v4'}
      const valueToLabel: Record<string, string> = {};
      const mappingRegex = /\{\s*label:\s*['"]([^'"]+)['"]\s*,\s*value:\s*['"]([^'"]+)['"]\s*\}/g;
      let mappingMatch;
      while ((mappingMatch = mappingRegex.exec(valuesStr)) !== null) {
        valueToLabel[mappingMatch[2]] = mappingMatch[1];
      }
      // Also try reverse order: {value: '...', label: '...'}
      const reverseMappingRegex = /\{\s*value:\s*['"]([^'"]+)['"]\s*,\s*label:\s*['"]([^'"]+)['"]\s*\}/g;
      while ((mappingMatch = reverseMappingRegex.exec(valuesStr)) !== null) {
        valueToLabel[mappingMatch[1]] = mappingMatch[2];
      }

      // Extract content from each TabItem
      // Note: some MDX has spaces around = like: <TabItem value = "t-deck">
      const tabItemRegex = /<TabItem[^>]*value\s*=\s*['"]([^'"]+)['"][^>]*>([\s\S]*?)<\/TabItem>/g;
      let result = '';
      let tabMatch;
      let matchedFilter = false;

      while ((tabMatch = tabItemRegex.exec(tabsContent)) !== null) {
        const tabValue = tabMatch[1];
        const tabContent = tabMatch[2].trim();
        // Look up the label for this value, fallback to value itself
        const label = valueToLabel[tabValue] || tabValue;

        // If filterValue is set, only show matching tab
        if (filterValue) {
          if (tabValue === filterValue) {
            result = `\n\n# ${label}\n\n${tabContent}\n`;
            matchedFilter = true;
          }
        } else {
          // No filter - show all tabs as sections
          result += `\n\n## ${label}\n\n${tabContent}\n\n---\n`;
        }
      }

      // If filter was set but didn't match, show all tabs
      if (filterValue && !matchedFilter) {
        tabItemRegex.lastIndex = 0;
        while ((tabMatch = tabItemRegex.exec(tabsContent)) !== null) {
          const tabValue = tabMatch[1];
          const tabContent = tabMatch[2].trim();
          const label = valueToLabel[tabValue] || tabValue;
          result += `\n\n## ${label}\n\n${tabContent}\n\n---\n`;
        }
      }

      return result || tabsContent;
    });

    // Remove any remaining JSX components
    mdx = mdx.replace(/<[A-Z][a-zA-Z]*[^>]*\/>/g, '');
    mdx = mdx.replace(/<[A-Z][a-zA-Z]*[^>]*>[\s\S]*?<\/[A-Z][a-zA-Z]*>/g, '');

    // Fix image paths - convert relative to absolute GitHub raw URLs
    mdx = mdx.replace(/!\[([^\]]*)\]\(\/img\/hardware\/([^)]+)\)/g,
      '![$1](https://meshtastic.org/img/hardware/$2)');

    // Also handle relative paths like ./image.png
    mdx = mdx.replace(/!\[([^\]]*)\]\(\.\/([^)]+)\)/g, (_match, alt, path) => {
      const dir = currentPage.substring(0, currentPage.lastIndexOf('/'));
      return `![${alt}](https://raw.githubusercontent.com/meshtastic/meshtastic/master/docs/${dir}/${path})`;
    });

    // Fix relative links to docs - mark them as internal
    mdx = mdx.replace(/\[([^\]]+)\]\(\/docs\/([^)]+)\)/g, (_match, text, path) => {
      const slug = convertPathToSlug(path);
      return `<a href="#" class="internal-doc-link" data-slug="${slug}">${text}</a>`;
    });

    // Fix relative links within hardware docs
    mdx = mdx.replace(/\[([^\]]+)\]\(\.\.\/([^)]+)\)/g, (_match, text, path) => {
      const slug = `hardware/devices/${path.replace('.mdx', '').replace('.md', '')}`;
      return `<a href="#" class="internal-doc-link" data-slug="${slug}">${text}</a>`;
    });

    // Fix same-directory relative links (handles ./path, ./path/, ./path/subpath/?query=param)
    // Match: [text](./path) or [text](./path/) or [text](./path/subpath/?query=value)
    // Preserve query params for tab filtering
    // DON'T append /index - let loadDevicePage handle file vs folder detection
    mdx = mdx.replace(/\[([^\]]+)\]\(\.\/([a-zA-Z0-9_\-\/]+?)\/?(\?[^)]*)?\)/g, (_match, text, path, query) => {
      // Get parent directory (remove /index if present)
      let currentDir = currentPage.replace(/\/index$/, '');
      // Path can be nested (e.g., "sensecap/card-tracker") or simple (e.g., "r1-neo")
      // Remove trailing slash from path if present
      const cleanPath = path.replace(/\/$/, '');
      // Preserve query string for tab filtering - don't add /index here
      const slug = `${currentDir}/${cleanPath}${query || ''}`;
      return `<a href="#" class="internal-doc-link" data-slug="${slug}">${text}</a>`;
    });

    return mdx;
  }

  function convertPathToSlug(path: string): string {
    let slug = path.replace(/\/$/, '').replace(/\.mdx?$/, '');
    return slug;
  }

  function setupInternalLinks() {
    document.querySelectorAll('.internal-doc-link').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const slug = (link as HTMLElement).getAttribute('data-slug');
        if (slug) {
          loadDevicePage(slug);
          window.history.pushState({ slug }, '', `#${slug}`);
        }
      });
    });
  }

  async function loadDevicePage(slugWithQuery: string) {
    showLoading();
    // Extract query params before stripping
    const queryMatch = slugWithQuery.match(/\?(.+)$/);
    const queryString = queryMatch ? queryMatch[1] : '';
    // Parse query to get filter value (e.g., "heltec=v3" -> "v3")
    let filterValue = '';
    if (queryString) {
      const params = new URLSearchParams(queryString);
      // Get the first param value (could be heltec=v3, mesh_node_=xxx, etc.)
      for (const [, value] of params) {
        filterValue = value;
        break;
      }
    }
    // Strip query strings and trailing slashes from slug
    const slug = slugWithQuery.split('?')[0].replace(/\/$/, '').replace(/\/+$/, '');
    currentPage = slug;

    // Update active nav button
    document.querySelectorAll('.device-nav-btn').forEach(btn => {
      btn.classList.toggle('active', btn.getAttribute('data-page') === slug);
    });

    const startTime = performance.now();

    // Try multiple file extensions
    const extensions = ['.mdx', '.md'];
    let response: Response | null = null;

    for (const ext of extensions) {
      const url = `${DOCS_BASE}/${slug}${ext}`;
      try {
        response = await fetch(url);
        if (response.ok) break;
      } catch (e) {
        // Continue to next extension
      }
    }

    // If not found and doesn't end with index, try with /index
    if (!response?.ok && !slug.endsWith('index')) {
      for (const ext of extensions) {
        const url = `${DOCS_BASE}/${slug}/index${ext}`;
        try {
          response = await fetch(url);
          if (response.ok) {
            currentPage = `${slug}/index`;
            break;
          }
        } catch (e) {
          // Continue
        }
      }
    }

    if (!response?.ok) {
      showError();
      return;
    }

    try {
      let markdown = await response.text();
      markdown = cleanMdx(markdown, filterValue);

      const loadTime = Math.round(performance.now() - startTime);

      // Wait for marked to load
      const waitForMarked = () => {
        return new Promise<void>((resolve) => {
          const check = () => {
            if ((window as any).marked) {
              resolve();
            } else {
              setTimeout(check, 50);
            }
          };
          check();
        });
      };

      await waitForMarked();
      const html = (window as any).marked.parse(markdown);
      showContent(html, loadTime);

      // Scroll to top of content
      contentEl?.scrollIntoView({ behavior: 'smooth', block: 'start' });

    } catch (error) {
      console.error('Failed to parse device docs:', error);
      showError();
    }
  }

  // Handle back/forward navigation
  window.addEventListener('popstate', (e) => {
    if (e.state?.slug) {
      loadDevicePage(e.state.slug);
    }
  });

  // Initialize when marked is loaded
  markedScript.onload = () => {
    // Check if there's a hash in the URL
    const hash = window.location.hash.slice(1);
    if (hash) {
      loadDevicePage(hash);
    } else {
      loadDevicePage('hardware/devices/index');
    }
  };

  // Nav button clicks
  document.querySelectorAll('.device-nav-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const page = btn.getAttribute('data-page');
      if (page) {
        loadDevicePage(page);
        window.history.pushState({ slug: page }, '', `#${page}`);
      }
    });
  });

  // Retry button
  retryBtn?.addEventListener('click', () => loadDevicePage(currentPage));
</script>
