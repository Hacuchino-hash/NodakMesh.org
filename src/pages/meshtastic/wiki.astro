<script>
  // Load marked.js from CDN
  const markedScript = document.createElement('script');
  markedScript.src = 'https://cdn.jsdelivr.net/npm/marked/marked.min.js';
  document.head.appendChild(markedScript);

  const DOCS_BASE = 'https://raw.githubusercontent.com/meshtastic/meshtastic/master/docs';
  const MESHTASTIC_DOCS_URL = 'https://meshtastic.org/docs';
  let currentPage = 'about/introduction';

  const loadingEl = document.getElementById('wiki-loading');
  const errorEl = document.getElementById('wiki-error');
  const contentEl = document.getElementById('wiki-content');
  const loadTimeEl = document.getElementById('load-time');
  const loadTimeValueEl = document.getElementById('load-time-value');
  const retryBtn = document.getElementById('retry-btn');
  const viewOriginalEl = document.getElementById('view-original');
  const originalLinkEl = document.getElementById('original-link');
  const errorOriginalLinkEl = document.getElementById('error-original-link');

  // Map slug to meshtastic.org URL path
  function getOriginalUrl(slug: string): string {
    // Convert our slug to meshtastic.org URL
    const pathMap: Record<string, string> = {
      'about/introduction': 'introduction',
      'about/faq': 'faq',
      'about/contributing': 'contributing',
      'getting-started/index': 'getting-started',
      'getting-started/initial-config': 'getting-started/initial-config',
      'getting-started/flashing-firmware/esp32/index': 'getting-started/flashing-firmware/esp32',
      'getting-started/flashing-firmware/esp32/web-flasher': 'getting-started/flashing-firmware/esp32/web-flasher',
      'getting-started/flashing-firmware/esp32/cli-script': 'getting-started/flashing-firmware/esp32/cli-script',
      'getting-started/flashing-firmware/nrf52/index': 'getting-started/flashing-firmware/nrf52',
      'configuration/radio/index': 'configuration/radio',
      'configuration/radio/lora': 'configuration/radio/lora',
      'configuration/radio/channels': 'configuration/radio/channels',
      'configuration/radio/bluetooth': 'configuration/radio/bluetooth',
      'configuration/radio/device': 'configuration/radio/device',
      'configuration/radio/display': 'configuration/radio/display',
      'configuration/radio/network': 'configuration/radio/network',
      'configuration/radio/position': 'configuration/radio/position',
      'configuration/radio/power': 'configuration/radio/power',
      'configuration/radio/security': 'configuration/radio/security',
      'hardware/devices/index': 'hardware/devices',
    };
    return `${MESHTASTIC_DOCS_URL}/${pathMap[slug] || slug.replace('/index', '')}/`;
  }

  function showLoading() {
    loadingEl?.classList.remove('hidden');
    errorEl?.classList.add('hidden');
    contentEl?.classList.add('hidden');
    loadTimeEl?.classList.add('hidden');
    viewOriginalEl?.classList.add('hidden');
  }

  function showError() {
    loadingEl?.classList.add('hidden');
    errorEl?.classList.remove('hidden');
    contentEl?.classList.add('hidden');
    loadTimeEl?.classList.add('hidden');
    viewOriginalEl?.classList.add('hidden');

    if (errorOriginalLinkEl) {
      errorOriginalLinkEl.setAttribute('href', getOriginalUrl(currentPage));
    }
  }

  function showContent(html: string, loadTime: number) {
    loadingEl?.classList.add('hidden');
    errorEl?.classList.add('hidden');
    contentEl?.classList.remove('hidden');
    loadTimeEl?.classList.remove('hidden');
    viewOriginalEl?.classList.remove('hidden');

    if (contentEl) contentEl.innerHTML = html;
    if (loadTimeValueEl) loadTimeValueEl.textContent = loadTime.toString();
    if (originalLinkEl) {
      originalLinkEl.setAttribute('href', getOriginalUrl(currentPage));
    }

    // Add click handlers to internal doc links
    setupInternalLinks();
  }

  function cleanMdx(mdx: string): string {
    // Remove frontmatter
    mdx = mdx.replace(/^---[\s\S]*?---\n*/m, '');

    // Remove import statements
    mdx = mdx.replace(/^import\s+.*$/gm, '');

    // Remove export statements
    mdx = mdx.replace(/^export\s+.*$/gm, '');

    // Convert :::admonition blocks to styled divs
    const admonitionTypes = ['note', 'info', 'warning', 'tip', 'caution', 'danger'];
    admonitionTypes.forEach(type => {
      const regex = new RegExp(`:::${type}\\[?([^\\]]*)?\\]?\\s*([\\s\\S]*?):::`, 'g');
      mdx = mdx.replace(regex, (match, title, content) => {
        const displayTitle = title || type.charAt(0).toUpperCase() + type.slice(1);
        return `<div class="admonition admonition-${type}"><strong>${displayTitle}</strong>${content.trim()}</div>`;
      });
    });

    // Remove JSX components (Tabs, TabItem, etc.)
    mdx = mdx.replace(/<Tabs[\s\S]*?<\/Tabs>/g, '<div class="admonition admonition-info"><strong>Interactive Content</strong>This section contains interactive tabs. View on meshtastic.org for full experience.</div>');
    mdx = mdx.replace(/<[A-Z][a-zA-Z]*[^>]*\/>/g, '');
    mdx = mdx.replace(/<[A-Z][a-zA-Z]*[^>]*>[\s\S]*?<\/[A-Z][a-zA-Z]*>/g, '');

    // Fix relative links to docs - mark them as internal
    mdx = mdx.replace(/\[([^\]]+)\]\(\/docs\/([^)]+)\)/g, (match, text, path) => {
      // Convert meshtastic.org path to our slug format
      const slug = convertPathToSlug(path);
      return `<a href="#" class="internal-doc-link" data-slug="${slug}">${text}</a>`;
    });

    // Fix relative links within docs (e.g., ../configuration/radio/lora)
    mdx = mdx.replace(/\[([^\]]+)\]\(\.\.\/([^)]+)\)/g, (match, text, path) => {
      const slug = convertPathToSlug(path);
      return `<a href="#" class="internal-doc-link" data-slug="${slug}">${text}</a>`;
    });

    // Fix same-directory relative links
    mdx = mdx.replace(/\[([^\]]+)\]\(\.\/([^)]+)\)/g, (match, text, path) => {
      // Get current directory and append
      const currentDir = currentPage.substring(0, currentPage.lastIndexOf('/'));
      const slug = `${currentDir}/${path.replace('.mdx', '').replace('.md', '')}`;
      return `<a href="#" class="internal-doc-link" data-slug="${slug}">${text}</a>`;
    });

    return mdx;
  }

  function convertPathToSlug(path: string): string {
    // Remove trailing slashes and file extensions
    let slug = path.replace(/\/$/, '').replace(/\.mdx?$/, '');

    // Handle paths like "configuration/radio/lora"
    // If it ends with a known directory, add /index
    const knownDirs = ['getting-started', 'configuration', 'hardware', 'about', 'flashing-firmware', 'radio', 'devices'];
    const lastPart = slug.split('/').pop();

    // Check if this looks like a directory reference
    if (knownDirs.includes(lastPart || '') && !slug.includes('index')) {
      // Keep as is, we'll try with and without index
    }

    return slug;
  }

  function setupInternalLinks() {
    document.querySelectorAll('.internal-doc-link').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const slug = (link as HTMLElement).getAttribute('data-slug');
        if (slug) {
          loadDocsPage(slug);
          // Update URL without navigation
          window.history.pushState({ slug }, '', `#${slug}`);
        }
      });
    });
  }

  async function loadDocsPage(slug: string) {
    showLoading();
    currentPage = slug;

    // Update active nav button
    document.querySelectorAll('.wiki-nav-btn').forEach(btn => {
      btn.classList.toggle('active', btn.getAttribute('data-page') === slug);
    });

    const startTime = performance.now();

    // Try multiple file extensions
    const extensions = ['.mdx', '.md'];
    let response: Response | null = null;
    let finalUrl = '';

    for (const ext of extensions) {
      const url = `${DOCS_BASE}/${slug}${ext}`;
      try {
        response = await fetch(url);
        if (response.ok) {
          finalUrl = url;
          break;
        }
      } catch (e) {
        // Continue to next extension
      }
    }

    // If not found, try with /index
    if (!response?.ok && !slug.endsWith('index')) {
      for (const ext of extensions) {
        const url = `${DOCS_BASE}/${slug}/index${ext}`;
        try {
          response = await fetch(url);
          if (response.ok) {
            finalUrl = url;
            break;
          }
        } catch (e) {
          // Continue
        }
      }
    }

    if (!response?.ok) {
      console.error('Failed to load docs:', slug);
      showError();
      return;
    }

    try {
      let markdown = await response.text();
      markdown = cleanMdx(markdown);

      const loadTime = Math.round(performance.now() - startTime);

      // Wait for marked to load
      const waitForMarked = () => {
        return new Promise<void>((resolve) => {
          const check = () => {
            if ((window as any).marked) {
              resolve();
            } else {
              setTimeout(check, 50);
            }
          };
          check();
        });
      };

      await waitForMarked();
      const html = (window as any).marked.parse(markdown);
      showContent(html, loadTime);

      // Scroll to top of content
      contentEl?.scrollIntoView({ behavior: 'smooth', block: 'start' });

    } catch (error) {
      console.error('Failed to parse docs:', error);
      showError();
    }
  }

  // Handle back/forward navigation
  window.addEventListener('popstate', (e) => {
    if (e.state?.slug) {
      loadDocsPage(e.state.slug);
    }
  });

  // Initialize when marked is loaded
  markedScript.onload = () => {
    // Check if there's a hash in the URL
    const hash = window.location.hash.slice(1);
    if (hash) {
      loadDocsPage(hash);
    } else {
      loadDocsPage('about/introduction');
    }
  };

  // Nav button clicks
  document.querySelectorAll('.wiki-nav-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const page = btn.getAttribute('data-page');
      if (page) {
        loadDocsPage(page);
        window.history.pushState({ slug: page }, '', `#${page}`);
      }
    });
  });

  // Retry button
  retryBtn?.addEventListener('click', () => loadDocsPage(currentPage));
</script>
