---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Page Not Found - NodakMesh"
  description="The page you're looking for doesn't exist. Find your way back to NodakMesh."
>
  <Header slot="header" />

  <div class="pt-24 pb-16 min-h-[70vh] flex items-center">
    <section class="w-full py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">

        <!-- 404 Graphic -->
        <div class="mb-8">
          <div class="inline-flex items-center justify-center w-32 h-32 rounded-full bg-[--color-bg-tertiary] border border-[--color-border] mb-6">
            <svg class="w-16 h-16 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h1 class="text-6xl sm:text-8xl font-bold text-[--color-text-primary] mb-4">
            4<span class="gradient-text">0</span>4
          </h1>
          <p class="text-xl text-[--color-text-secondary] mb-2">
            Signal Lost
          </p>
          <p class="text-[--color-text-muted] max-w-md mx-auto">
            The page you're looking for seems to have wandered off the mesh. Let's get you back on track.
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <a href="/" class="btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Go Home
          </a>
          <a href="/blog" class="btn-secondary">
            Read the Blog
          </a>
        </div>

        <!-- Quick Links -->
        <div class="max-w-2xl mx-auto">
          <p class="text-sm text-[--color-text-muted] mb-4">Popular destinations:</p>
          <div class="flex flex-wrap justify-center gap-2">
            <a href="/meshcore/getting-started" class="px-3 py-1.5 rounded-full bg-[--color-bg-tertiary] text-sm text-[--color-text-secondary] hover:text-[--color-accent] hover:bg-[--color-bg-secondary] transition-colors">
              MeshCore Guide
            </a>
            <a href="/meshtastic/getting-started" class="px-3 py-1.5 rounded-full bg-[--color-bg-tertiary] text-sm text-[--color-text-secondary] hover:text-[--color-accent] hover:bg-[--color-bg-secondary] transition-colors">
              Meshtastic Guide
            </a>
            <a href="/meshcore/devices" class="px-3 py-1.5 rounded-full bg-[--color-bg-tertiary] text-sm text-[--color-text-secondary] hover:text-[--color-accent] hover:bg-[--color-bg-secondary] transition-colors">
              Devices
            </a>
            <a href="/protocols" class="px-3 py-1.5 rounded-full bg-[--color-bg-tertiary] text-sm text-[--color-text-secondary] hover:text-[--color-accent] hover:bg-[--color-bg-secondary] transition-colors">
              MeshCore vs Meshtastic
            </a>
            <a href="/community" class="px-3 py-1.5 rounded-full bg-[--color-bg-tertiary] text-sm text-[--color-text-secondary] hover:text-[--color-accent] hover:bg-[--color-bg-secondary] transition-colors">
              Community
            </a>
            <a href="/contact" class="px-3 py-1.5 rounded-full bg-[--color-bg-tertiary] text-sm text-[--color-text-secondary] hover:text-[--color-accent] hover:bg-[--color-bg-secondary] transition-colors">
              Contact
            </a>
          </div>
        </div>

      </div>
    </section>
  </div>

  <Footer slot="footer" />
</Layout>
