---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Contact - NodakMesh"
  description="Get in touch with NodakMesh. Questions about mesh networking, partnership opportunities, or joining the North Dakota mesh community."
  keywords="contact NodakMesh, mesh network help, North Dakota mesh contact, LoRa community contact"
>
  <Header slot="header" />

  <div class="pt-24 pb-16">
    <!-- Hero -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <h1 class="text-4xl sm:text-5xl font-bold text-[--color-text-primary] mb-6">
            Get in <span class="gradient-text">Touch</span>
          </h1>
          <p class="text-xl text-[--color-text-secondary] leading-relaxed">
            Have questions about mesh networking? Want to get involved with NodakMesh? We'd love to hear from you.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Options -->
    <section class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">

          <!-- Discord -->
          <a href="https://discord.gg/JUBrZepkaM" target="_blank" class="card p-6 hover:border-[#5865F2]/50 transition-colors group">
            <div class="w-12 h-12 rounded-lg bg-[#5865F2]/10 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-[#5865F2]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"/>
              </svg>
            </div>
            <h2 class="text-xl font-bold text-[--color-text-primary] mb-2 group-hover:text-[#5865F2] transition-colors">
              Discord
            </h2>
            <p class="text-[--color-text-secondary] mb-4">
              The fastest way to get help. Join our community server to chat with other mesh enthusiasts.
            </p>
            <span class="text-[#5865F2] text-sm font-medium">Join Server →</span>
          </a>

          <!-- Reddit -->
          <a href="https://www.reddit.com/r/NoDakMesh/" target="_blank" class="card p-6 hover:border-[#FF4500]/50 transition-colors group">
            <div class="w-12 h-12 rounded-lg bg-[#FF4500]/10 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-[#FF4500]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
              </svg>
            </div>
            <h2 class="text-xl font-bold text-[--color-text-primary] mb-2 group-hover:text-[#FF4500] transition-colors">
              Reddit
            </h2>
            <p class="text-[--color-text-secondary] mb-4">
              Join the r/NoDakMesh subreddit for discussions, questions, and community updates.
            </p>
            <span class="text-[#FF4500] text-sm font-medium">Visit Subreddit →</span>
          </a>

          <!-- Email -->
          <a href="mailto:hello@nodakmesh.org" class="card p-6 hover:border-[--color-accent]/50 transition-colors group">
            <div class="w-12 h-12 rounded-lg bg-[--color-accent]/10 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h2 class="text-xl font-bold text-[--color-text-primary] mb-2 group-hover:text-[--color-accent] transition-colors">
              Email
            </h2>
            <p class="text-[--color-text-secondary] mb-4">
              For partnerships, media inquiries, or anything that doesn't fit Discord.
            </p>
            <span class="text-[--color-accent] text-sm font-medium">hello@nodakmesh.org →</span>
          </a>

        </div>
      </div>
    </section>

    <!-- Quick Links -->
    <section class="py-12 bg-[--color-bg-secondary]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-[--color-text-primary] mb-8 text-center">
          Looking for something specific?
        </h2>

        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-4xl mx-auto">
          <a href="/meshcore/getting-started" class="card p-4 text-center hover:border-[--color-accent]/50 transition-colors">
            <p class="font-medium text-[--color-text-primary]">Get Started with MeshCore</p>
            <p class="text-sm text-[--color-text-muted]">Setup guides</p>
          </a>
          <a href="/meshtastic/getting-started" class="card p-4 text-center hover:border-[--color-accent]/50 transition-colors">
            <p class="font-medium text-[--color-text-primary]">Get Started with Meshtastic</p>
            <p class="text-sm text-[--color-text-muted]">Setup guides</p>
          </a>
          <a href="/partner" class="card p-4 text-center hover:border-[--color-accent]/50 transition-colors">
            <p class="font-medium text-[--color-text-primary]">Host a Node</p>
            <p class="text-sm text-[--color-text-muted]">Partner with us</p>
          </a>
          <a href="/resources" class="card p-4 text-center hover:border-[--color-accent]/50 transition-colors">
            <p class="font-medium text-[--color-text-primary]">FAQs & Resources</p>
            <p class="text-sm text-[--color-text-muted]">Common questions</p>
          </a>
        </div>
      </div>
    </section>

    <!-- Location Note -->
    <section class="py-12">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[--color-bg-tertiary] border border-[--color-border] mb-4">
          <svg class="w-5 h-5 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span class="text-[--color-text-secondary]">Based in North Dakota</span>
        </div>
        <p class="text-[--color-text-muted]">
          NodakMesh is a community-driven project focused on building mesh network infrastructure across North Dakota.
          <a href="/not-local" class="text-[--color-accent] hover:underline">Not in ND? We can still help!</a>
        </p>
      </div>
    </section>
  </div>

  <Footer slot="footer" />
</Layout>
