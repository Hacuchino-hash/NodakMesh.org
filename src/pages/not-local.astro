---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FeatureCard from '../components/FeatureCard.astro';

const resources = [
  {
    title: 'MeshCore Getting Started',
    description: 'Learn how to set up your first MeshCore node and join the network.',
    icon: '<svg class="w-6 h-6 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>',
    href: '/meshcore/getting-started',
  },
  {
    title: 'Meshtastic Getting Started',
    description: 'Get up and running with Meshtastic firmware on your device.',
    icon: '<svg class="w-6 h-6 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/></svg>',
    href: '/meshtastic/getting-started',
  },
  {
    title: 'MeshCore Devices',
    description: 'Browse recommended hardware for running MeshCore firmware.',
    icon: '<svg class="w-6 h-6 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>',
    href: '/meshcore/devices',
  },
  {
    title: 'Meshtastic Devices',
    description: 'Find the right hardware for your Meshtastic setup.',
    icon: '<svg class="w-6 h-6 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>',
    href: '/meshtastic/devices',
  },
  {
    title: 'Resources',
    description: 'Helpful tools, links, and documentation for mesh networking.',
    icon: '<svg class="w-6 h-6 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>',
    href: '/resources',
  },
];
---

<Layout title="Not Local? No Problem - NodakMesh">
  <Header slot="header" />

  <div class="pt-24 pb-16">
    <!-- Hero -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center reveal">
          <h1 class="text-4xl sm:text-5xl font-bold text-[--color-text-primary] mb-6">
            Not Local? <span class="gradient-text">No Problem</span>
          </h1>
          <p class="text-xl text-[--color-text-secondary] leading-relaxed mb-4">
            Nodak Mesh welcomes everyone. Whether you are nearby or across the country, you are invited to learn, build, and grow with us.
          </p>
          <p class="text-lg text-[--color-text-secondary]">
            Come experience North Dakota Nice. Share what you know. Learn something new. Say hi.
          </p>
        </div>
      </div>
    </section>

    <!-- Resources Section -->
    <section class="py-16 bg-[--color-bg-secondary]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-12 reveal">
          <h2 class="text-3xl font-bold text-[--color-text-primary] mb-4">
            Get Started
          </h2>
          <p class="text-[--color-text-secondary] text-lg">
            Everything you need to learn about mesh networking and get your first node up and running.
          </p>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {resources.map((resource, index) => (
            <div class={`reveal stagger-${index + 1} h-full`}>
              <FeatureCard
                title={resource.title}
                description={resource.description}
                icon={resource.icon}
                href={resource.href}
              />
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Blog Section -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center reveal">
          <div class="w-16 h-16 rounded-full bg-[--color-accent]/10 flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-[--color-text-primary] mb-4">
            Read Our Blog
          </h2>
          <p class="text-[--color-text-secondary] text-lg mb-8">
            Tutorials, project ideas, network updates, and tips from the NodakMesh community. Whether you're just getting started or looking to expand your mesh knowledge, there's something for everyone.
          </p>
          <a href="/blog" class="btn-primary inline-flex items-center gap-2">
            Visit the Blog
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Discord Section -->
    <section class="py-16 bg-[--color-bg-secondary]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center reveal">
          <div class="w-16 h-16 rounded-full bg-[#5865F2]/10 flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-[#5865F2]" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"/>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-[--color-text-primary] mb-4">
            Join the Community
          </h2>
          <p class="text-[--color-text-secondary] text-lg mb-8">
            Our Discord server is where the NodakMesh community comes together. Get help, share your builds, and connect with mesh enthusiasts from North Dakota and beyond.
          </p>
          <a href="https://discord.gg/JUBrZepkaM" target="_blank" rel="noopener noreferrer" class="btn-primary inline-flex items-center gap-2 bg-[#5865F2] hover:bg-[#4752C4]">
            Say Hello in Discord
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"/>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </div>

  <Footer slot="footer" />
</Layout>

<script>
  // Scroll reveal animations
  const revealElements = document.querySelectorAll('.reveal, .reveal-left, .reveal-right, .reveal-scale');

  const revealObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('revealed');
      }
    });
  }, {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  });

  revealElements.forEach(el => revealObserver.observe(el));
</script>
