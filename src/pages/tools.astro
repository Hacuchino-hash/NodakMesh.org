            </svg>
          </div>
          <h2 class="text-2xl font-bold text-[--color-text-primary]">Mobile & Web Apps</h2>
        </div>
        <p class="text-[--color-text-secondary] mb-6 max-w-3xl">
          Connect to your mesh device from your phone or browser. Send messages, view maps, and manage your network.
        </p>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {mobileApps.map(app => (
            <a href={app.url} target="_blank" rel="noopener" class="card p-6 hover:border-[--color-accent]/50 transition-all group">
              <div class="flex items-start justify-between mb-4">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-500/20 to-pink-500/20 flex items-center justify-center">
                  {app.icon === 'android' && (
                    <svg class="w-6 h-6 text-green-400" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M17.523 15.341c-.5 0-.91.41-.91.91s.41.91.91.91.91-.41.91-.91-.41-.91-.91-.91zm-11.046 0c-.5 0-.91.41-.91.91s.41.91.91.91.91-.41.91-.91-.41-.91-.91-.91zm11.405-6.02l1.96-3.392a.41.41 0 00-.147-.562.41.41 0 00-.562.147l-1.985 3.435A12.075 12.075 0 0012 8.07c-1.85 0-3.592.422-5.149 1.18L4.866 5.814a.41.41 0 00-.562-.147.41.41 0 00-.147.562l1.96 3.392A11.216 11.216 0 001 17.878h22c0-3.294-1.422-6.263-3.678-8.316l-.44-.241z"/>
                    </svg>
                  )}
                  {app.icon === 'apple' && (
                    <svg class="w-6 h-6 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                    </svg>
                  )}
                  {app.icon === 'web' && (
                    <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                    </svg>
                  )}
                </div>
                <div class="flex items-center gap-2">
                  <span class="text-xs px-2 py-1 rounded-full bg-[--color-bg-tertiary] text-[--color-text-muted]">{app.platform}</span>
                  <svg class="w-5 h-5 text-[--color-text-muted] group-hover:text-[--color-accent] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </div>
              </div>
              <h3 class="font-semibold text-[--color-text-primary] mb-2 group-hover:text-[--color-accent] transition-colors">{app.name}</h3>
              <p class="text-sm text-[--color-text-secondary]">{app.description}</p>
            </a>
          ))}
        </div>
      </div>
