                id="txPower"
                value="22"
                min="0"
                max="30"
                class="w-full px-4 py-2 bg-[--color-bg-tertiary] border border-[--color-border] rounded-lg text-[--color-text-primary] focus:outline-none focus:border-[--color-accent] focus:ring-1 focus:ring-[--color-accent]"
