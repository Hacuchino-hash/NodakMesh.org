---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PostCard from '../../components/blog/PostCard.astro';
import FeaturedPost from '../../components/blog/FeaturedPost.astro';
import CategoryBadge from '../../components/blog/CategoryBadge.astro';

// Get all blog posts sorted by date
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Get featured post (first featured=true or most recent)
const featuredPost = sortedPosts.find(post => post.data.featured) || sortedPosts[0];
const remainingPosts = sortedPosts.filter(post => post.id !== featuredPost?.id);

// Categories for filter
const categories = ['reviews', 'news', 'guides', 'community'] as const;
---

<Layout title="Blog | NodakMesh" description="The latest news, reviews, guides, and community stories from the mesh networking world. Your go-to resource for Meshtastic and MeshCore content.">
  <Header slot="header" />

  <div class="pt-24 pb-16">
    <!-- Hero Section -->
    <section class="py-12 md:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-bold text-[--color-text-primary] mb-4">
            Mesh Network <span class="text-[--color-accent]">Blog</span>
          </h1>
          <p class="text-xl text-[--color-text-secondary] max-w-2xl mx-auto">
            Reviews, guides, news, and community stories from the world of off-grid mesh networking.
          </p>
        </div>

        <!-- Category Filters -->
        <div class="flex flex-wrap justify-center gap-3 mb-12">
          <a
            href="/blog"
            class="px-4 py-2 rounded-full text-sm font-medium bg-[--color-accent] text-[--color-bg-primary] transition-all"
          >
            All Posts
          </a>
          {categories.map(cat => (
            <a
              href={`/blog/category/${cat}`}
              class="px-4 py-2 rounded-full text-sm font-medium border border-[--color-border] text-[--color-text-secondary] hover:border-[--color-accent] hover:text-[--color-accent] transition-all"
            >
              {cat.charAt(0).toUpperCase() + cat.slice(1)}
            </a>
          ))}
        </div>

        <!-- Featured Post -->
        {featuredPost && (
          <div class="mb-12">
            <FeaturedPost
              title={featuredPost.data.title}
              description={featuredPost.data.description}
              date={featuredPost.data.date}
              author={featuredPost.data.author}
              category={featuredPost.data.category}
              slug={featuredPost.id}
              image={featuredPost.data.image}
            />
          </div>
        )}

        <!-- Posts Grid -->
        {remainingPosts.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {remainingPosts.map(post => (
              <PostCard
                title={post.data.title}
                description={post.data.description}
                date={post.data.date}
                author={post.data.author}
                category={post.data.category}
                slug={post.id}
                image={post.data.image}
              />
            ))}
          </div>
        ) : !featuredPost && (
          <div class="text-center py-16">
            <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-[--color-bg-tertiary] flex items-center justify-center">
              <svg class="w-10 h-10 text-[--color-text-muted]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-[--color-text-primary] mb-2">No posts yet</h3>
            <p class="text-[--color-text-secondary]">Check back soon for reviews, guides, and mesh networking news.</p>
          </div>
        )}
      </div>
    </section>
  </div>

  <Footer slot="footer" />
</Layout>
