---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Community - NodakMesh">
  <Header slot="header" />

  <div class="pt-24 pb-16">
    <!-- Hero -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <h1 class="text-4xl sm:text-5xl font-bold text-[--color-text-primary] mb-6">
            Join the <span class="gradient-text">Community</span>
          </h1>
          <p class="text-xl text-[--color-text-secondary] leading-relaxed">
            Connect with fellow mesh enthusiasts across North Dakota. Get help, share experiences,
            and help grow the network.
          </p>
        </div>
      </div>
    </section>

    <!-- Discord Section -->
    <section id="discord" class="py-16 bg-[--color-bg-secondary]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-[#5865F2]/10 border border-[#5865F2]/20 mb-4">
              <svg class="w-5 h-5 text-[#5865F2]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"/>
              </svg>
              <span class="text-[#5865F2] text-sm font-medium">Discord</span>
            </div>
            <h2 class="text-3xl font-bold text-[--color-text-primary] mb-4">
              Join Our Discord Server
            </h2>
            <p class="text-[--color-text-secondary] mb-6">
              Our Discord server is the hub of the NodakMesh community. Get help with setup,
              share your builds, coordinate deployments, and connect with others in the mesh.
            </p>
            <ul class="space-y-3 mb-6">
              <li class="flex items-center gap-3 text-[--color-text-secondary]">
                <svg class="w-5 h-5 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Get help with device setup and troubleshooting</span>
              </li>
              <li class="flex items-center gap-3 text-[--color-text-secondary]">
                <svg class="w-5 h-5 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Share your node builds and antenna setups</span>
              </li>
              <li class="flex items-center gap-3 text-[--color-text-secondary]">
                <svg class="w-5 h-5 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Coordinate repeater deployments across ND</span>
              </li>
              <li class="flex items-center gap-3 text-[--color-text-secondary]">
                <svg class="w-5 h-5 text-[--color-accent]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Stay updated on events and network news</span>
              </li>
            </ul>
            <a href="https://discord.gg/JUBrZepkaM" target="_blank" rel="noopener noreferrer" class="btn-primary inline-flex items-center gap-2 bg-[#5865F2] hover:bg-[#4752C4]">
              Join Discord Server
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"/>
              </svg>
            </a>
          </div>
          <div class="card p-6">
            <h3 class="text-lg font-semibold text-[--color-text-primary] mb-4">Discord Channels</h3>
            <div class="space-y-3">
              <div class="flex items-center gap-3 p-3 bg-[--color-bg-tertiary] rounded-lg">
                <span class="text-[--color-text-muted]">#</span>
                <div>
                  <div class="text-[--color-text-primary] font-medium">general</div>
                  <div class="text-xs text-[--color-text-muted]">General chat and introductions</div>
                </div>
              </div>
              <div class="flex items-center gap-3 p-3 bg-[--color-bg-tertiary] rounded-lg">
                <span class="text-[--color-text-muted]">#</span>
                <div>
                  <div class="text-[--color-text-primary] font-medium">technical-help</div>
                  <div class="text-xs text-[--color-text-muted]">Setup and troubleshooting support</div>
                </div>
              </div>
              <div class="flex items-center gap-3 p-3 bg-[--color-bg-tertiary] rounded-lg">
                <span class="text-[--color-text-muted]">#</span>
                <div>
                  <div class="text-[--color-text-primary] font-medium">3d-prints</div>
                  <div class="text-xs text-[--color-text-muted]">Share your 3D printed cases and mounts</div>
                </div>
              </div>
              <div class="flex items-center gap-3 p-3 bg-[--color-bg-tertiary] rounded-lg">
                <span class="text-[--color-text-muted]">#</span>
                <div>
                  <div class="text-[--color-text-primary] font-medium">announcements</div>
                  <div class="text-xs text-[--color-text-muted]">Network news and updates</div>
                </div>
              </div>
            </div>
            <h4 class="text-sm font-semibold text-[--color-text-primary] mt-4 mb-3">Regional Discussions</h4>
            <div class="space-y-2">
              <div class="flex items-center gap-3 p-2 bg-[--color-bg-tertiary] rounded-lg">
                <span class="text-[--color-text-muted]">#</span>
                <div class="text-[--color-text-primary] text-sm">east-red-river-valley ðŸšœ</div>
              </div>
              <div class="flex items-center gap-3 p-2 bg-[--color-bg-tertiary] rounded-lg">
                <span class="text-[--color-text-muted]">#</span>
                <div class="text-[--color-text-primary] text-sm">central-drift-prairie ðŸ¦†</div>
              </div>
              <div class="flex items-center gap-3 p-2 bg-[--color-bg-tertiary] rounded-lg">
                <span class="text-[--color-text-muted]">#</span>
                <div class="text-[--color-text-primary] text-sm">west-missouri-plateau ðŸ¦¬</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Events Section -->
    <section id="events" class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-[--color-text-primary] mb-8 text-center">
          Events & Meetups
        </h2>
        <div class="max-w-3xl mx-auto">
          <div class="card p-8 text-center mb-8">
            <svg class="w-16 h-16 text-[--color-accent] mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <h3 class="text-xl font-semibold text-[--color-text-primary] mb-2">Events Coming Soon</h3>
            <p class="text-[--color-text-secondary] mb-4">
              We're planning regular meetups and events for the NodakMesh community.
              Join Discord to be notified when events are scheduled.
            </p>
            <p class="text-sm text-[--color-text-muted]">
              Interested in hosting a local meetup? Let us know in Discord!
            </p>
          </div>

          <div class="grid sm:grid-cols-2 gap-4">
            <div class="card p-4">
              <h3 class="font-semibold text-[--color-text-primary] mb-2">Virtual Happy Hours</h3>
              <p class="text-sm text-[--color-text-secondary]">
                Weekly casual video calls to chat about mesh networking, share projects, and help each other.
              </p>
            </div>
            <div class="card p-4">
              <h3 class="font-semibold text-[--color-text-primary] mb-2">In-Person Meetups</h3>
              <p class="text-sm text-[--color-text-secondary]">
                Occasional gatherings in Fargo, Bismarck, and other ND cities.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Partners Section -->
    <section id="partners" class="py-16 bg-[--color-bg-secondary]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-[--color-text-primary] mb-4 text-center">
          Friends & Partners
        </h2>
        <p class="text-[--color-text-secondary] text-center mb-12 max-w-2xl mx-auto">
          We're proud to be connected with other mesh communities and organizations working to build
          resilient communication networks.
        </p>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <a href="https://www.sodakmesh.org" target="_blank" class="card p-6 group">
            <h3 class="text-lg font-semibold text-[--color-text-primary] mb-2 group-hover:text-[--color-accent]">
              SoDak Mesh
            </h3>
            <p class="text-sm text-[--color-text-secondary] mb-2">
              Our neighbors to the south - the South Dakota mesh network community.
            </p>
            <span class="text-[--color-accent] text-sm">sodakmesh.org</span>
          </a>

          <a href="https://mspmesh.org" target="_blank" class="card p-6 group">
            <h3 class="text-lg font-semibold text-[--color-text-primary] mb-2 group-hover:text-[--color-accent]">
              MSP Mesh
            </h3>
            <p class="text-sm text-[--color-text-secondary] mb-2">
              Minneapolis-St. Paul metro area mesh network.
            </p>
            <span class="text-[--color-accent] text-sm">mspmesh.org</span>
          </a>

          <div class="card p-6 border-dashed">
            <h3 class="text-lg font-semibold text-[--color-text-muted] mb-2">
              Your Organization?
            </h3>
            <p class="text-sm text-[--color-text-muted] mb-2">
              Want to partner with NodakMesh? Reach out on Discord!
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-[--color-text-primary] mb-4">
            Get in Touch
          </h2>
          <p class="text-[--color-text-secondary] mb-8">
            Have questions or want to get involved? The best way to reach us is through Discord.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="https://discord.gg/JUBrZepkaM" target="_blank" rel="noopener noreferrer" class="btn-primary inline-flex items-center gap-2">
              Join Discord
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"/>
              </svg>
            </a>
            <a href="mailto:ContactUs@NoDakMesh.org" class="btn-secondary inline-flex items-center gap-2">
              Email Us
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>

  <Footer slot="footer" />
</Layout>
